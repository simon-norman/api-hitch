{
    "eslint.enable": true,
    "eslint.options": {
        "extensions": [
            ".html",
            ".js",
            ".vue",
            ".jsx",
            ".ts"
        ]
    },
    "eslint.trace.server": "messages",
    "eslint.validate": [
    {
        "language": "html",
        "autoFix": true
        },
        {
          "language": "vue",
          "autoFix": true
        },
        {
          "language": "javascript",
          "autoFix": true
        },
        {
          "language": "typescript",
          "autoFix": true
        },
        {
          "language": "javascriptreact",
          "autoFix": true
        }
      ],
    "editor.formatOnSave": false,

    "editor.tabSize": 2,
  }